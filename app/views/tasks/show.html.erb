<div class="col-md-6 col-md-offset-3">
<h1>Task Detail Page</h1>

<div class="jumbotron" id="description">
<h2><%= @task.name %></h2>
<p><%= @task.description %></p>
Created: <%= @task.created_at.strftime("%m/%d/%Y, %H:%M UTC") %><br>
<% if @task.completion_date != nil %>
  Completed: <%= time_ago_in_words(@task.completion_date) %> ago on <%= @task.completion_date.strftime("%m/%d/%Y, %H:%M UTC") %>
<% end %><br>

</div>

  <p class="buttons" >
  <%= link_to "Edit this Task", edit_task_path, class: "btn btn-primary"  %>
  <%= link_to "Return to Tasks List", tasks_path, class: "btn btn-primary"  %>
  </p>

</div>

