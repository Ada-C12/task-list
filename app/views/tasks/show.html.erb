    <section class="tasks-container">
      <section class="tasks">
        <h2>Selected Task</h2>
        <%= render inline: "<strong><u>Name:</u> </strong>" %> <%= @task.name %> <br>
        <%= render inline: "<strong><u>Description:</u> </strong>" %> <%= @task.description %> <br>
        <% if @task.completion_date.nil? %>
          <%= render inline: "<strong><u>Completion Date and Time:</u> </strong> Not yet completed" %>
        <% else %>
          <%= render inline: "<strong><u>Completion Date and Time:</u> </strong>" %> <%= @task.completion_date %>
        <% end %>
        <br>
        <%= link_to "Edit |", edit_task_path %>
        <%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>
      </section>
    </section>

