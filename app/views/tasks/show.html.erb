<h2>Task #<%= @task.id %></h2>
<h3><%= @task.name %></h3>
<p><%= @task.description %></p>
<%= link_to 'Return to Task List', tasks_path %>
<%= link_to 'Edit Task', edit_task_path %>
<%= link_to "Delete", task_path(@task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>