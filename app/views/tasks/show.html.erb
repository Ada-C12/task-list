<h2>Task Name: <%= @task.name %></h2>

<ul>
  <li>Description: <%= @task.description %> <br/></li>
  <li>Completed Date: <%= @task.completion_date %> <br/></li>
  <li>Complete? <%= @task.complete %></li>
</ul>

<ul>
<li><%= link_to "Mark Complete", toggle_complete_path(@task), method: :patch %></li>
<li><%= link_to "Edit Task", edit_task_path %></li>
<li><%= link_to "Delete Task", task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></li>
<li><%= link_to "Home", tasks_path %></li>
</ul>