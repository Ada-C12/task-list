<ul>
  <li> Description: <%= task_variable.description %> </li>
  <li> Completion Date: <% if task_variable.completion_date == nil %>
        Not yet completed
      <% else %>
        <%= task_variable.completion_date %>
      <% end %> </li>
  <li> <%= link_to "Edit Task", edit_task_path(task_variable.id) %> </li>
  <li> <%= link_to "Delete Task", task_path(task_variable.id), method: :delete, data: {Confirm: "Hold up! Are you sure you want to delete this item?"} %> </li>
  <li> <% if task_variable.completion_date == nil %>
    <%= link_to "Mark Complete", toggle_path(task_variable.id), method: :patch %>
    <% else %>
    <%= link_to "Mark Incomplete", toggle_path(task_variable.id), method: :patch %>
    <% end %>
  </li>
</ul>
