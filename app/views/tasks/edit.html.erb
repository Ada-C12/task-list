<h2>Edit Book Form</h2>

<%= form_with model: @task, class: "edit-task-form" do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completed %>
  <%= f.text_field :completed %>
  
  <%= f.submit "Edit Book", class: "task-form-button" %>

<% end %>