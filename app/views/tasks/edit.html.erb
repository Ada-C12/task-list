<h2>This is the edit action. Edit book form</h2>

<%# form_with is a view helper%>

<%= form_with model: @task, class: "edit-task-form" do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Edit task", class: "task-form-button" %>

<% end %>