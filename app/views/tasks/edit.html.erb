<%= form_with model: @task, class: 'edit-task' do |f| %>
  <p>Current Task Information</p>

  <ul>
    <li>
      Name: <%= @task.name %>
    </li>
    <li>
      Description: <%= @task.description %>
    </li>
    <li>
      Completion date: <%= @task.completion_date %>
    </li>
  </ul>

  <p>Please enter the new information for this task</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Update Task", class: "task-button" %>
<% end %>