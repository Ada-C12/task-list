<%= form_with model: @task, class: 'update-task' do |f| %>
<p>Please provide the following information to update:</p>

  <%= f.label :name, 'Task name' %> 
  <%= f.text_field :name %> 

  <%= f.label :description, 'Description' %>
  <%= f.text_field :description %>

  <%= f.label :description, 'Completion date' %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Update task", class: "task-button" %>

<% end %>