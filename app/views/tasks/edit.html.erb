<%= form_with model: @task, class: 'edit-task' do |f| %>

<p>Please edit this task: </p>

<%= f.label 'Name' %>
<%= f.text_field :name %>

<%= f.label 'Description' %>
<%= f.text_field :description %>

<%= f.label 'Date Assigned' %>
<%= f.text_field :date_assigned %>

<%= f.label 'Due Date' %>
<%= f.text_field :date_completed %>

<%= f.submit "Save Task", class: "task-button" %>

<% end %>