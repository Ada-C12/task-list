<section class="container">
  <section class="buttons">
    <p> <%= link_to "Edit Task", edit_task_path %></p>
    <p> <%= link_to "Back to Tasks", tasks_path %></p>
  </section>

<section class="form">
  <%= form_with model: @task, class: 'edit-task' do |f| %>
  <p>Please provide the following information to update the task to the database:</p>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Update Task", class: "book-button" %>

  <% end %>
</section>
</section>