<%= form_with model: @task, class: 'edit-task' do |f| %>
<p>Please provide the following information to update your book to our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>

  <%= f.label :date %>
  <%= f.text_field :date %>
  <br>

  <%= f.submit "Update Task", class: "Task-button" %>

<% end %>