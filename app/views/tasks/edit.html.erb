<%= form_with model: @task, class: 'edit-task' do |f| %>

  <%= f.label :name %> 
  <%= f.text_field :name %> <br />

  <%= f.label :description %> 
  <%= f.text_field :description %> <br />

  <%= f.submit 'Update Task', class: 'tasks-button' %>

<% end %>

<p> <%= link_to "Home", tasks_path %></p>