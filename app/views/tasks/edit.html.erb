<%= form_with model: @task do |f| %>
  <p>Please make changes to your task below:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Save Task" %>
<% end %>