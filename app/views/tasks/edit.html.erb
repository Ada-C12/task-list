<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to update a task:</p>

  <p><%= f.label :name %>
  <%= f.text_field :name%></p>

  <p><%= f.label :description %>
  <%= f.text_field :description%></p>

  <p><%= f.submit "Update Task", class: "task_button" %></p>

<% end %>
