<%= form_with model: @task do |f|  %>
  <h1> Edit a Task </h1>
  <h2> Please change the information below to edit a new task.</h2>

  <%= f.label 'Name:'  %>
  <%= f.text_field :name %>

  <%= f.label 'Description:' %>
  <%= f. text_field :description%>

  <%= f.submit 'Update Task '%>
  
<% end %>
