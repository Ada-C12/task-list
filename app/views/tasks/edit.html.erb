<h1> Edit Task </h1>

<%= form_with model: @task, class: "edit-task-form" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :due_date %>
  <%= f.text_field :due_date %>

  <%= f.submit "edit Task", class: "edit-task-button" %>
<% end %>