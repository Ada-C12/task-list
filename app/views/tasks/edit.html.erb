<h1>Edit Task </h2>

<% if @task.completion_date.nil? %>
  <h3>Date Completed: TBD</h3>
<% else %>
  <h3>Date Completed: <%= @task.completion_date%></h3>
<% end %>
<%= render partial: "form", locals: {form_class: "edit-task-form", submit_button_label: "Edit Task"} %>
<%= link_to "Delete", task_path(@task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>
