<link href="https://fonts.googleapis.com/css?family=Slabo+27px&display=swap" rel="stylesheet">

<h1 class="head">New Task</h1>
<%= form_with model: @task, class: 'task-input' do |f| %>
<p>Please provide the following information to save a task to your to-do list:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>


<%= button_to "Return to Task List", tasks_path, method: :get, class: "task-button" %>
