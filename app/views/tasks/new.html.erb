<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please enter a new task</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>