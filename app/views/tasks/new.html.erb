<h2>Create New Task </h2>

<%= form_with model: @task, class: "new-task-form" do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>
  
  <%= f.submit "Add Task", class: "new-task-button" %>

<% end %>
