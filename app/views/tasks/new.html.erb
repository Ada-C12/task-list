<h1>This is the Task Create New Action</h1>

<%= form_with model: @task, class: "new_task_form" do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :progress %>
<%= f.text_field :progress %>

<%= f.label :completion_date %>
<%= f.text_field :completion_date %>

<%= f.submit "Create Task", class: "task-form-button" %>

<% end %>
