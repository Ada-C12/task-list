<h1> New Task </h1>

<%= form_with model: @task, class: "new-task-form" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :due_date %>
  <%= f.text_field :due_date %>

  <%= f.submit "Create Task", class: "task-form-button" %>
<% end %>