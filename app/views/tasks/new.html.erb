<h1>Create a New Task</h1>

<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to create a task:</p>

  <p><%= f.label :name %>
  <%= f.text_field :name%></p>

  <p><%= f.label :description %>
  <%= f.text_field :description%></p>

  <p><%= f.label :completed_by %>
  <%= f.text_field :completed_by %></p>

  <p><%= f.submit "Save Task", class: "task_button" %></p>

<% end %>
