<h1>Create a New Task</h1>

<section>
  <fieldset> 
  <h2>Enter Details</h2>

  <%= form_with model: @task, id: "new-task-form" do |f| %>
    <p>
      <%= f.label :name, 'Task Name:' %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description, 'Description:' %>
      <%= f.text_field :description %>
    </p>
    <p>
      <%# f.label :due_date, 'Due Date:' %>
      <%# f.date_select :due_date %>
    </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
  </fieldset> 


  <% end %>
</section>
