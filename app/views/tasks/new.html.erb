<%= form_with model: @task, class: 'create-task' do |f| %>
  <h2>Add Task</h2>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Submit", class: "task-button" %>
<% end %>
