<h2>Create A New Task</h2>

<%= form_with model: @task, class: "new-task-form" do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completed %>
  <%= f.text_field :completed %>

  <%= f.submit "Create Task", class: "task-form-button" %>
<% end %>
