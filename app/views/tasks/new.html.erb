<h2>Create New Task</h2>

<%= form_with model: @task, class: 'create-task' do |f| %>
  <h3>Please enter a new task</h3>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>