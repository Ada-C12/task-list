<h2> New Task</h2>


<%= form_with model: @task, class: "New Task Form" do |f| %>
  <p>Please provide a task name and description to add a new task:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%#= f.label :completed%>
  <%#= f.text_field :completed%>

  <%= f.submit "Save Task", class:  "task-button" %>
<% end %>

