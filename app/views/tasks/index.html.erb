<h1>Task List</h1>

<section>
<ul>
 <% @tasks.each do |task| %>
  <li>
   <%= link_to task.name, task_path( task.id ) %> <%= task.description %>
   <%= link_to "delete", task_path( task.id ), method: :delete, data: { confirm: "The following action will permanently delete this task. Press 'OK' to continue, or cancel to return." }, class: "index-delete-link" %>
   <%= link_to "mark as complete", complete_path( task.id ), method: :patch %>
   </li>
 <% end %>
</ul>

<%= link_to "Create new task", new_task_path %>
</section>
