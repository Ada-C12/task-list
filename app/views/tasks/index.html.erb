<section>
    <h2>To do list</h2>
    <ul>
        <% @tasks.each do |task| %>
            <li>
            <%=task.id %>. <%= task.name %> -- <%= task.description %> -- <%= task.completion_date %>  
            <%= link_to("Edit", edit_path(task.id)) %>
            </li>
        <%end%>
    </ul>
</section>