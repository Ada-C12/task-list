<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<ol>
<% @tasks.each do |task| %>
  <li>Task Name: <%= link_to task.name, task %></li>
    <p>Edit</p>
    <p><%= link_to 'Delete', task, :method => :delete, data: {confirm: 'Are you sure?' } %></p>
    <p><%= link_to 'Mark Complete', complete_task_path(task), :method => :patch %></p>
<% end %>
</ol>

