<h1>Task-List</h1>
<ol>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task) %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
      <ul> 
        <li>
        Description: <%= task[:description] %>
        </li>
        <li>
        completed by: <%= task[:completed] %>
        </li>
      </ul>
    </li>
  <% end %>
</ol>
<%= link_to "Create", new_task_path %>