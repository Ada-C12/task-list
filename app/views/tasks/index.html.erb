<h1>Mariya's To Do List </h1>

<section>
<h2>
<%= link_to "add new task", new_task_path %>
</h2>

</section>
<section>
<ul>
<% @tasks.each do |task| %>
  <li>
    <span class="<%= 'strike' unless task.completion_date == nil %>"><%= task.name %></span>
    <%= link_to "details", task_path(task) %>
    <%= link_to "edit", edit_task_path(task) %>
    <%= link_to "delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"}%>
    <%= form_with model: task, url: completed_path(task.id) do |f| %>
      <%= f.check_box :completed %>
      <%= f.submit "Completed Task", class: "task-button" %>
    <% end %>
  </li>
  <% end %>
</ul>
</section>
