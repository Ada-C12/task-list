<div class="main">

<span class="button">
  <%= link_to "Add a New Task", new_task_path %>
</span>

<ul class="all-tasks">
  <% @tasks.each do |task|  %>
    <li>
      <% if !task.completed %>
        <%= link_to task.name, task_path(task), class: "name" %><br> 
        <%= link_to "Mark complete", complete_task_path(task.id), method: :patch %> |
      <% else %>
        <%= link_to task.name, task_path(task), class: "strike-through" %><br> 
        <%= link_to "Mark not complete", not_complete_task_path(task.id), method: :patch %> |
      <% end %>
      
      <%= link_to "Edit", edit_task_path(task.id) %> |
      <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete this?"} %>
    </li>
  <% end %>
</ul>

</div>
