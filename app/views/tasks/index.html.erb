<h2>YOUR TASKS</h2>

<ul>
  <% @tasks.each_with_index do |task, i|  %>
    <li>
      <%= link_to task.name, task_path(task.id) %>
      <%= link_to 'View', task_path(task.id) %>
      <%= link_to 'Edit', edit_task_path(task.id) %>
      <%= link_to 'Delete', task_path(task.id), method: :delete, data: {confirm: "Delete task?"} %>
      <% if task.completion_date == nil %>
        <%= link_to 'Mark Complete', mark_complete_path(task.id), method: :patch %>
      <% else %>
        <%= link_to 'Unmark Complete', mark_complete_path(task.id), method: :patch %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Add Task", new_task_path %>
