<h1><%= @greeting %></h1>
<% @tasks.each do |task| %>
<li> 
<%= link_to task[:name], task_path(task.id) %>
<%= link_to 'Complete?', task_path(task.id), method: :complete %>
<%= link_to 'Edit', edit_task_path(task.id) %>
<%= link_to 'Destroy', task_path(task.id), method: :delete, data: { confirm: "Are you SURE?" } %>

</li>
<% end %>
