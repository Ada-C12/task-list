<h2>Tasks</h2>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= link_to task.name, task_path(task) %>
      Description: <%= task[:description] %> <%= link_to "Edit", edit_task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}%>
    </li>
    
  <% end %>
</ul>

