<h1 class="blinking_border">Tasks#index</h1>

<table>
  <tr>
    <th></th>
    <th>NAME</th>
    <th>DESCRIPTION</th>
    <th>COMPLETION DATE</th>
  </tr>

  <% @tasks.each_with_index do |task, index| %>
  <tr>
  <td><%= index+1 %></td>
  <td><%= link_to task.name.capitalize, task_path( task.id ) %></td>
  <td><%= task.description.capitalize %></td>
  <td>
    <% if task.completion_date %>
      <%= task.completion_date %>
    <% else %>
      <button> Nothing will happen if u click this lol
    <% end%>
    </td>
  </tr>
  <% end %>
</table>
<br>
<%= link_to "MAKE NEW TASK", new_task_path %><br>

