<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= task.name %>
      <%= task.description %>
      <%= task.completed %>
      <%= link_to "Edit", edit_task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"}%>
      
      <%= link_to "Complete", edit_task_path(task) %>
    </li>
  <% end %>
</ul>
