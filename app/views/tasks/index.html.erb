
<h1>Task List</h1>
<h3>Click Here to create a new task ---><%= link_to " New Task", new_task_path %></h3>

  <ul class="task-list">
  <% @tasks.each do |task| %>
    <li>
    <%# added today %>
    <p><strong>Task:</strong> <%= link_to "#{task.name}", task_path(task)%> 
     <p> <strong>Description:</strong> <%="#{task.description}"%>
     <p> <strong>Date:</strong> <%= "#{task.date}" %></p>   
     <p> Click Here ---><%= link_to  " To Edit", edit_task_path(task) %> 
     <%= link_to  " OR Delete", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete?"}%></p>
    </li>
  <% end %> 
</ul>
  

