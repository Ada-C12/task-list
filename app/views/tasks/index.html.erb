<section class="page-container">
  <nav>
    <ul>
      <li><%= link_to "Add new task", new_task_path %></li>
      <li><%= link_to "All tasks", tasks_path %></li>
    </ul>
  </nav>

  <section class = "task-list-container">

    <h2>Tasks</h2>
    <p>Click checkbox to mark tasks as complete or incomplete</p>

    <ul>
      <% @tasks.each do |task|  %>
        <li>
          <section class = "task-item-container">
            <% if task.complete %>
              <%= link_to '&#x2612;'.html_safe, toggle_complete_path(task), method: :patch %>
            <% else %>
              <%= link_to '&#x2610;'.html_safe, toggle_complete_path(task), method: :patch %>
            <% end %>
            <%= link_to task.name, task_path(task) %> 
            <section class = "option-container">
              <ul>
                <li><%= link_to "view", task_path(task) %></li>
                <li><%= link_to "edit", edit_task_path(task) %></li>
                <li><%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></li>
              </ul>
            </section>
          </section>
        </li>
      <% end %>
    </ul>
  </section>
</section>