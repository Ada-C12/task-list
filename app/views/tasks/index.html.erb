<h1><%= @greeting %></h1>
<% @tasks.sort.each do |task| %>
<li> 
<%= link_to task[:name], task_path(task.id) %>

<%= link_to 'Complete', complete_task_path(task.id), method: :patch %>
<span>
<%= task.completion_date %>
</span>
<%= link_to 'Edit', edit_task_path(task.id) %>
<%= link_to 'Destroy', task_path(task.id), method: :delete, data: { confirm: "Are you SURE?" } %>

</li>
<% end %>
