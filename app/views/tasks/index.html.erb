<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task.id) %>
      <%= "-- #{task.description}" %>
      <%= task.completed %>
      <%= link_to "Toggle Complete", toggle_complete_path(task.id), method: :patch %>
      <%= link_to "(Delete Task)", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>
    </li>
  <% end %>
</ul>
