<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.name %>
      <%= link_to "Edit", task_path(task.id) %>
      <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete this book?"} %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add Task', new_task_path %>