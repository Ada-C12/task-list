<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= link_to task.name, task_path(task)  %> Description: <%= task.description %> 
      <%= link_to "Edit", edit_task_path(task) %> 
      <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"}%>
      <%= link_to "Mark as Completed", complete_task_path(task.id), method: :patch %>
       <%= link_to "Mark as Incomplete", incomplete_task_path(task.id), method: :patch %>

    </li>
  <% end %>
</ul>

<%= link_to "Add new task", new_task_path %> 
