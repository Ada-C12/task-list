<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      Reminder: do <%= task[:name] %>, which will require <%= task[:description] %>, by <%= task[:completed] %>
      <%= link_to "Edit", edit_task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>