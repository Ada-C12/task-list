<h2> Tasks List</h2>

<%=link_to "Create Task", new_task_path%>
<ul>
    <%@tasks.each do |task|%>  
        <li>
        <%if task.completion_date?%>
        <%status = "Unmark Complete"%>
        <%else%>
        <%status = "Mark Complete"%>
        <%end%>
        <%=link_to task.name, task_path(task.id)%> <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure? It will be gone forever."} %>
        <%=link_to status ,complete_path(task.id), method: :patch%>
        <%=link_to "Edit This Task", edit_task_path(task.id) %>
        </li>

    <%end%>
</ul>