<h1>Tasks</h1>
<%= link_to "new task", new_task_path %>
<ul>
  <% @tasks.sort.each do |task|  %>
    <li>
      <p>
        <%= link_to task.name, task_path(task.id) %> 
        <%= link_to "[X]", task_path(task.id), method: :delete, data: { confirm: "delete?" } %> 
      </p>
      <p> <%= task.description %> </p>
      <p> 
        <%= task.completed %>
        <%= button_to "done", complete_task_path(task.id), method: :patch %>
      </p>
    </li>
  <% end %>
</ul>
