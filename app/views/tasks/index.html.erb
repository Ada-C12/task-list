<p>
  Here are my tasks:
  <ul> <% @tasks.each do |task| %>
    <li> <%= task.name %> 
      <ul>
        <li> Description: <%= task.description %> </li>
        <li> Completion Date: <%= task.completion_date %> </li>
        <li> Edit: <%= link_to "Edit Task", edit_task_path(task.id) %> </li>
        <li> Delete: <%= link_to "Delete Task", task_path(task.id), method: :delete, data: {Confirm: "Hold up! Are you sure you want to delete this item?"} %> </li>
      </ul>
    </li>
    <% end %>
  </ul>
</p>