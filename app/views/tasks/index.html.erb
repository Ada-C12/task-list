<h1>list o' all tasks</h1>
<p> <%= link_to "(Create New Task)", new_task_path %></p>
<ul><% @tasks.each do |task|%>
<li><%= link_to task.name, task_path( task.id ) %>  <%= task.description%>   <%= task.completed%> 
<%= link_to"(Delete)", task_path( task.id ), method: :delete, data: { confirm: "Are you sure you want to delete this task?"}%>
<%= link_to "(Edit this Task)", edit_task_path( task.id )%>
<% if task.completed == nil %>
  <%= link_to '<button type="button">Mark Completed</button>'.html_safe, toggle_completed_task_path( task.id ), method: :patch %>
<% else %>
<%= link_to '<button type="button">Mark Incomplete</button>'.html_safe, toggle_completed_task_path( task.id ), method: :patch %>
<% end %>
</li>
<% end %>

</ul>