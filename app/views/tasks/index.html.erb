<div class="col-md-6 col-md-offset-3">

<h1>Your To Do List:</h1>

  <% @tasks.each do |task| %>
  <div class="row">
    <div class="col-md-8">
      <% if task.completion_date != nil %>
        <h2><strike><%= link_to task.name, task_path(task) %></strike></h2>
      <% else %>
        <h2><%= link_to task.name, task_path(task) %></h2>
      <% end %>
      <p><%= task.description %></p>

      <% if task.completion_date != nil %>
      <p>Completed: <%= time_ago_in_words(task.completion_date) %> ago on <%= task.completion_date.strftime("%m/%d/%Y") %></p>
      <% end %>
      </div>
      <br>
      
      <div class="col-md-2", id="completed">
        <p><%= link_to completed_path(task), method: :patch do %></p>
        <i class="fas fa-lg fa-check"></i>
        <% end %>
      </div>

      <div class="col-md-2">
        <p><%= link_to task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} do %></p>
          <i class="fas fa-lg fa-trash"></i>
        <% end %>
      </div>
    </div>
    <% end%>

    <p class="buttons"><%= link_to "Add a New Task", new_task_path, class: "btn btn-primary"  %></p>
</div>
