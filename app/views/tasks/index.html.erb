<h2>Tasks</h2>

<ul>
  <li><%= link_to "Add new task", new_task_path %></li>
  <li><%= link_to "All tasks", tasks_path %></li>
</ul>

<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= link_to task.name, task_path(task) %>  <br />
      <ul>
        <li><%= link_to "mark complete", toggle_complete_path(task), method: :patch %></li>
        <li><%= link_to "view", task_path(task) %></li>
        <li><%= link_to "edit", edit_task_path(task) %></li>
        <li><%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></li>
      </ul>
      <br />
    </li>
  <% end %>
</ul>
