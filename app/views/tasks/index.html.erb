<h1 class="box header">Task List</h1>

  <% @tasks.each_with_index do |task, i|  %>
  <ul class="box">
      <% if task.completed.nil? %>
      <li> <%=i+1%>. <%= link_to task.name, task_path(task) %> </li>
      <% else %>
      <li class= "strikethrough"> <%=i+1%>. <%= link_to task.name, task_path(task) %> </li>
       <% end %>
      <li> Description: <%= task.description %> </li>




     <%# logic goes here to display complete or incomplete, and which method to go to %>
      <% if task.completed.nil? %>
      <div class="complete">
      <%= link_to "Mark Complete", toggle_complete_path(task), method: :patch %>
      </div>
      <% else %>
      <div class="incomplete">
      <%= link_to "Mark incomplete", toggle_incomplete_path(task), method: :patch %>
      </div>
      <% end %>


      <%= link_to "Delete Task", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete the task: '#{task.name}' ? This cannot be undone!"} %>
  </ul>
  <% end %>
</ul>