<h1>Tasks List</h1>

<section>
  <ol>
    <% @tasks.each do |task| %>
    <li>Task name: <%= link_to task.name, task_path(task.id) %>
    <p>Task description: <%= task.description %></p>
    <p>Task completed: <%= task.completed %></p>

    <p><%= button_to "#{task.completed ? "Mark as Not Completed" : "Mark as Completed"}", completed_task_path(task.id), method: :patch %> <%= button_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Sure about that?"} %></p>
    
    </li>
    <% end %>
  <ol>
</section>

