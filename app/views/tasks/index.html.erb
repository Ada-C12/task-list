
<section>
<h1> Tasks </h1>
  <ul>
    <%@tasks.each do |task| %>
      <li> 
      <%= task.name %> 
      <%= link_to "(Edit)", edit_task_path( task.id )%>
      <%= link_to "(Delete)", task_path( task.id ), method: :delete, data:{ confirm: "Are YOU sure?" }, class: "index-delete-link" %>
      <% if task.completed?%>
          <%=link_to "(mark incomplete)", complete_path( task.id ),method: :patch%>
        <%else%>
          <%=link_to "(complete)", complete_path( task.id ), method: :patch%>
       <%end%>
      </li>
  <%end%>
  </ul>
</section>

<%= link_to "New Task", new_task_path, class: "New Task Form" %>
