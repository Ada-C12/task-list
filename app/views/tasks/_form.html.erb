<%= form_with model: @task, class: "task-form" do |f| %>
  <h3>Please enter information to <%= message %> task </h3>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area(:description, rows: 5) %>

  <%= f.submit "#{action_name} Task", class: "task-button" %>
<% end %>
