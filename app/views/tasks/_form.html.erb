<%= form_with model: @task, class: task_form_class do |f| %>
  <div>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>
  <div>
  <%= f.label :description %>
  <%= f.text_field :description %>
  </div>
  <div>
  <%= f.label :completed %>
  <%= f.text_field :completed %>
  </div>
  <%= f.submit submit_button_label, class: "task-form-button" %>
<% end %>