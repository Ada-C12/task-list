<section class="form">
  <%= form_with model: @task, class: task_style_class do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

    <%= f.submit submit_button_label, class: "task-button" %>
  <% end %>
</section>

