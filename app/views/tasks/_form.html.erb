<%= form_with model: @task, class: "task-input" do |f| %>
  <p>Please provide the following information to <%= verb_name %> a task:</p>

  <p><%= f.label :name %>
  <%= f.text_field :name%></p>

  <p><%= f.label :description %>
  <%= f.text_field :description%></p>

  <p><%= f.submit action_name, class: "task_button" %></p>

<% end %>
