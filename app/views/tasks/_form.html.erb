<%= form_with model: @task, class: 'form' do |f| %>
  <p>Please provide the following information to <%= verb_name %> the task:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "#{action_name} Task", class: "task-button" %>

<% end %>
