
<%= form_with model: @task, class: 'new-task' do |f| %>
<p>Please provide the following information to update your task to our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :done %>
  <%= f.check_box :done %>

 <%= f.submit "#{action_name} task", class: "task-button" %>

<% end %>
