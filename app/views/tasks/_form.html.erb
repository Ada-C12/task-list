<p>Please provide the following information to <%= verb_name %> your task to our database:</p>

<%= form_with model: @task, class: "task-input" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :completion_date %>
  <%= f.date_select :completion_date %>

  <%= f.label :completed %>
  <%= check_box 'task', 'completed', {}, 'true', 'false' %>

  <%= f.submit "#{action_name} task", class: "task-button" %>

<% end %>
