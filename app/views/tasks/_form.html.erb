<%= form_with model: @task, class: 'task-form' do |f| %>
  <p>Please provide the following information to <%= action_name.downcase %> your book in our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br><br>

  <%= f.submit "#{action_name} Task", class: "task-button" %>

<% end %>
