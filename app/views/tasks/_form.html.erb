<%= form_with model: @task, class: "task-form" do |f| %>
  <p>Please provide the following information to <%= action_name.downcase %> your task in our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.submit "#{action_name} Task", class: "task-button" %>
<% end %>
